@model Product
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Detalles del producto en Kiosco Biro">
    <link rel="stylesheet" href="~/css/details.css" type="text/css">
    <link rel="icon" href="/assets/logo/kisoco-16px.ico" type="image/png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <title>@Model.ProductName - Kiosco Biro</title>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <img src="/assets/logo/kisoco-modified.png" alt="Kiosco" onclick="closePage()">
            </div>
            <div class="hamburger" id="hamburger">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            <ul class="nav-items" id="nav-items">
                <li class="dropdown">
                    <a href="#" class="dropbtn">Categorías<span>&#9662;</span></a>
                    <div class="dropdown-content">
                        <ul>
                            <li><button id="alfajoresBut">Alfajores</button></li>
                            <li><button id="bebidasBut">Bebidas</button></li>
                            <li><button id="snacksBut">Snacks</button></li>
                            <li><button id="chiclesBut">Chicles</button></li>
                            <li><button id="dulcesBut">Dulces</button></li>
                            <li><button id="galletitasBut">Galletitas</button></li>
                        </ul>
                    </div>
                </li>
                <li><a href="#" id="opiniones">Opiniones</a></li>
                <li><a href="#">Promos</a></li>
            </ul>
            <div class="search">
                <input type="search" placeholder="Buscar productos" id="searchBar">
            </div>
        </nav>
    </header>

    <script>
        const hamburger = document.getElementById('hamburger');
        const navItems = document.getElementById('nav-items');

        hamburger.addEventListener('click', () => {
            navItems.classList.toggle('open');
            hamburger.classList.toggle('open');
        });
    </script>

    <main id="product-main">
        <div class="product-container">
            <div class="image-container">
                @if (@Model.Quantity > 0)
                {
                    <img src="@Model.ProductImage" alt="imagen-@Model.ProductName" class="product-image">
                }

                else
                {
                    <img src="@Model.ProductImage2" alt="imagen2-@Model.ProductName" class="product">
                }
                <i class="material-icons" id="details-button" onclick="closePage()">close</i>
            </div>
            <div class="info-container">
                <h1 class="product-name" product-name="@Model.ProductName">@Model.ProductName</h1>
                <p id="productId" productId="@Model.ProductId">
                <p class="description">@Model.Description</p>
                <p class="price" ">Precio: $@Model.Price</p>
            </div>
        </div>
        <div id="recommendationsContainer"> @*llenado con el javascript*@</div>
        
       
    </main>
    <footer class="footer">
        <a href="https://www.instagram.com/promo25biro/" target="_blank">
            <img src="/assets/redes-sociales/instagram.svg" alt="Instagram">
        </a>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/details.js"></script>
</body>
</html>
